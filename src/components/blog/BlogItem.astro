---
import { Icon } from "astro-icon/components";
import PostTags from "./PostTags.astro";

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const link = post.slug ? `posts/${post.slug}` : "#";
---

<article class="max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8">
  <div class="mt-2">
    <header>
      <div class="mb-1">
        <span class="text-sm">
          <Icon
            name="tabler:clock"
            class="w-3.5 h-3.5 inline-block -mt-0.5 dark:text-gray-400"
          />
          <time datetime={post.date} class="inline-block">{post.date}</time>
        </span>
      </div>
      <h2
        class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300"
      >
        {
          link ? (
            <a
              class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200"
              href={link}
            >
              {post.title}
            </a>
          ) : (
            post.title
          )
        }
      </h2>
    </header>

    {
      post.description && (
        <p class="flex-grow text-muted dark:text-slate-400 text-lg">
          {post.description}
        </p>
      )
    }
    {
      post.tags && Array.isArray(post.tags) ? (
        <footer class="mt-5">
          <PostTags tags={post.tags} />
        </footer>
      ) : (
        <Fragment />
      )
    }
  </div>
</article>
